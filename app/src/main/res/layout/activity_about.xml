<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AboutActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/toolbar_back"/>

                <ImageView
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/re_logo"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="INFO RAZIA"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="140dp"
                        android:visibility="visible"
                        android:layout_height="2dp"
                        android:background="@color/secondaryColor"/>

                 <TextView
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:layout_gravity="center_horizontal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Developer"
                     android:textStyle="bold"
                     android:textSize="18sp"/>

                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_width="140dp"
                        android:visibility="visible"
                        android:layout_height="2dp"
                        android:background="@color/secondaryColor"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dev_image4"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/secondaryLightColor"
                        android:elevation="1dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dev_image2"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/secondaryLightColor"
                        android:layout_marginRight="20dp"
                        android:elevation="1dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dev_image3"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/secondaryLightColor"
                        android:elevation="1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dev_image5"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/secondaryLightColor"
                        android:layout_marginRight="10dp"
                        android:elevation="1dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dev_image1"
                        app:civ_border_width="2dp"
                        android:elevation="1dp"
                        app:civ_border_color="@color/secondaryLightColor"
                        />


                </LinearLayout>

                <TextView
                    android:layout_marginTop="35sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Team"
                    android:textColor="@color/primaryTextColor"/>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_contact_mail"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bantingtulangsquad34@gmail.com"
                        android:textColor="@color/primaryTextColor"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_copyright"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019"
                        android:textColor="@color/primaryTextColor"/>


                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

